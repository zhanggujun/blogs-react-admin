.addBox
  .formBox
    padding:20px 20px 0 0
    display:flex
    .formBoxLeft
      flex:1
      .button
        margin:0 10px 10px 0!important
      .textarea
        height:400px
        width:100%
        padding:5px 7px
    .formBoxRight
      width:30%
      border-left:1px solid #bfcbd9
      margin-left:20px
      padding-left:20px
      .itemImageBox
        padding:20px
        position:relative
        .imgBox
          width:200px
          height:200px
          border:1px dashed #eee
          margin:0 auto
          border-radius:4px
          position:relative
          .listImage
            position:absolute
            top: 50%
            left:50%
            transform:translate(-50%,-50%)
            z-index:20
            .imgDel
              //font-size:20px
              position:absolute
              top: -5px
              right: -5px
              color:#f00
              background-color:#fff
              border-radius:50%
              cursor:pointer
            img
              display:block
              max-width:185px
              max-height:185px
              object-fit:cover
          .upload
            display:block
            position:absolute
            width:100%
            height:100%
            z-index:10
            .uploadFile
              display:none
            .icon
              font-size:30px
              position:absolute
              top:50%
              left:50%
              transform:translate(-50%,-50%)
              color:#eee
            .loading
              position:absolute
              top:50%
              left:50%
              transform:translate(-50%,-50%)
              font-size:35px
              background-color:#fff
  .diaBody
    .diaTitle
      padding:10px 0
    .uploadBox
      .diaUpload
        width:80px
        height:80px
        float:left
        border:1px dashed #eee
        margin:5px
        position:relative
        .diaImageBox
          max-width:70px
          max-height:70px
          position:absolute
          top: 50%
          left: 50%
          transform:translate(-50%,-50%)
          .diaDel
            display:block
            font-size:12px
            position:absolute
            top: -3px
            right: -3px
            color:#f00
            border-radius:50%
            cursor:pointer
          .diaImage
            display:block
            max-width:70px
            max-height:70px
            object-fit:cover
        .labelUpload
          display:block
          width: 100%
          height:100%
          position:absolute
          top:0
          left:0
          cursor:pointer
          .diaIcon
            width:20px
            height:20px
            position:absolute
            top: 50%
            left: 50%
            margin:-10px 0 0 -10px
            .diaIcon1
              font-size:20px
          .diaUploadFile
            display:none!important